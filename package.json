{
  "name": "linzhe-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "build:tw": "tailwindcss -i ./app/globals.css -o ./public/output.css --config ./tailwind.cdn.config.mts",
    "dev": "dotenv -e .env.dev.local -- next dev",
    "build": "prisma generate && next build && npm run build:tw",
    "start": "next start",
    "lint": "next lint",
    "prettier-lint": "prettier --write .",
    "migrate:deploy": "dotenv -e .env.local -- prisma migrate deploy",
    "migrate:dev": "dotenv -e .env.dev.local -- prisma migrate dev --name=dev",
    "migrate:reset": "dotenv -e .env.dev.local -- prisma migrate reset",
    "gen-posts-info": "node script/gen-posts-info.mjs"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@monaco-editor/react": "^4.7.0",
    "@next/mdx": "^16.1.6",
    "@prisma/client": "^7.4.1",
    "@radix-ui/react-slot": "^1.2.4",
    "@shikijs/core": "^3.22.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/fs-extra": "^11.0.4",
    "@types/mdx": "^2.0.13",
    "@types/node": "25.3.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "10.4.24",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.3.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "10.0.2",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "fast-glob": "^3.3.3",
    "framer-motion": "^12.34.3",
    "fs-extra": "^11.3.3",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "immer": "^11.1.4",
    "lucide-react": "^0.575.0",
    "medium-zoom": "^1.1.0",
    "monaco-editor": "^0.55.1",
    "next": "16.1.6",
    "next-mdx-remote": "^6.0.0",
    "next-themes": "^0.4.6",
    "next13-progressbar": "^1.2.2",
    "postcss": "8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prisma": "^7.4.1",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-loading-skeleton": "^3.5.0",
    "rehype-mdx-code-props": "^3.0.1",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "4.0.1",
    "shiki": "^3.22.0",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.9.3",
    "use-immer": "^0.11.0",
    "zustand": "^5.0.11"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma"
    ],
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma"
    ]
